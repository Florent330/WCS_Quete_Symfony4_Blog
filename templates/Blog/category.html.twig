{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1>Category : {{ category.name }}</h1>
    {% for article in articles |slice (0,3)|reverse %}
        <div>
            <p>{{ article.id }}</p>
            <p>{{ article.title }}</p>
            <p>{{ article.content }}</p>
        </div>
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

{% endblock %}